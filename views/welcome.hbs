<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Welcome {{username}}</title>
        <style>
            body { display: flex; align-items: center; justify-content: flex-start; flex-direction: column; width: 100vw; height: 100vh; overflow:hidden; overflow-y: auto;
            font-family: Arial, Helvetica, sans-serif; background-color: #2C3333; } .main { margin: 10px; width: 600px; padding: 8px 35px; padding-bottom: 30px;
            background-color: #E7F6F2; border-radius: 9px; } 
            h1 { color: #2C3333;} .question { display: flex; flex-direction: column; margin-bottom: 12px; }
            input { margin: 3px 0; padding: 6px; } 
            ul {list-style: none; list-style-position:inside; padding: 0;}
            li { list-style-type: none; background-color:
            #A5C9CA; margin-bottom: 16px; padding: 16px 30px; border-radius: 8px; } 
            a { display: inline-block;font-weight: bold; align-self: flex-start; margin:
            4px 0; background-color: #395B64; color: #FFFFFF; padding: 8px 12px; border-radius: 4px; border: none; cursor: pointer; text-decoration: none;}
        </style>
    </head>

    <body>
        <div class="main">
            <h1>DOM Based XSS Demo</h1>
            <a href="/">/</a>
            {{#if isLoggedIn}}
                <a href="/welcome">/welcome</a>
                <a href="/logout">/logout</a>
            {{else}}
                <a href="/seed-data">/seed-data</a>
                <a style="background-color:#CF3C3C;" href="/login">/login</a>
                <a style="background-color:#35A671;" href="/login-safe">/login-safe</a>
            {{/if}}
            <a style="background-color:#CF3C3C;" href="/dom-xss">/dom-xss</a>
            <a style="background-color:#35A671;" href="/dom-xss-safe">/dom-xss-safe</a>
            <a style="background-color:#CF3C3C;" href="/dom-xss2">/dom-xss2</a>
        </div>

        <div class="main">
            <h1>Welcome Page</h1>

            <div>
                <p><strong>Logged in as:</strong> <i>{{username}}</i></p>
            </div>

        </div>

        <div class="main">
            <form action = "/welcome" method="get">
                <h1>Create new post</h1>
                    <div class = "question">
                        <b><label for="postTitle">Post Title </label></b>
                        <input type="text" name="postTitle" placeholder="Post Title"></input>

                    </div>
                    <button type="submit">SUBMIT</button>
            </form>

            <h1>
                Your posts:
            </h1>

            <ul>
                {{#each posts}}
                    <li>
                        <p><strong>username:</strong> {{username}}</p>
                        <p>
                            <strong>title:</strong>
                            {{title}}
                        </p>
                    </li>
                {{/each}}
            </ul>
        </div>
    </body>
</html>