		<div class="content">
            <div class="main">
                <h1>Create new private todo item</h1>

                <form action = "/todo-list" method="get">
                    <div class = "question">
                        <b><label for="todoItemTitle">TodoItem Title </label></b>
                        <input type="text" name="todoItemTitle" placeholder="TodoItem Title"></input>
                    </div>
                    <button type="submit">SUBMIT</button>
                </form>
            </div>

            <div class="main">
                <h1>Your Private Todo List:</h1>

                <ul class="user-todoItems">
                    {{#each todoItems}}
                        <li>
                            <p><strong>username:</strong> {{username}}</p>
                            <p>
                                <strong>title:</strong>
                                {{title}}
                            </p>
