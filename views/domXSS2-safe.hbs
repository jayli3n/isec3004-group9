            var nameArr = inStr.split("-");
            for( var i=0; i<(nameArr.length)-1;i++)
            {
                returnStr += nameArr[i]+" ";
            }
            returnStr += nameArr[(nameArr.length)-1] + ":";
            return returnStr;
        }
